<crawl-scope>
 <seeds src="example-seeds.txt" />
 <follow-links 
    depth="2" 
    path-extension
    domain-extension /> 
                             <!-- if follow-links not present, gets seeds only -->
                             <!-- if depth not present, follows indefinitely -->
                             <!-- path-extension and domain-extension mean within seeds -->
                             <!-- 'anywhere' would be another valid option -->
</crawl-scope>