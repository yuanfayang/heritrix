<!-- This is a simple example of how you might extend the default configurationl -->
<crawl-order name="GardenCrawl" extends="../default/order.xml">
 
	<disk path="my_output_dir/" />
 	<arc-file prefix="CUSTOM_ARC_PREFIX-" />
 
	<crawler-behavior>

 		<http-headers>
 			<User-Agent>Custom User Agent (your@address.here)</User-Agent>
  			<From>your@address.here</From>
 		</http-headers>
 
		<processors>

			<!-- be sure to use the isFirst attribute if you wish to override the default
				first processor in the parent config file -->
		  	<processor 
		  		isFirst="true"
    			name="Preprocessor" 
    			class="org.archive.crawler.basic.SimplePreconditionEnforcer"
    			next="DNS">
   				<params delay-factor="1" />
  			</processor>
		</processors>
 
	</crawler-behavior>

</crawl-order>